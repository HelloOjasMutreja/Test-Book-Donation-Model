<h1 class="text-center"><%= pluralize(@lists.count, "Result") %></h1>

<div class="container">
	<table class="table table-dark table-striped">
	
	<thead>
		<tr>
			<th><%= sort_link(@query, :title, "Title", default_order: :asc ) %></th>
		</tr>
	</thead>

	<tbody>
		<%= @lists.each do |list| %>
			<tr>
				<td><%= link_to list.title, list %></td>
			</tr>
		<% end %>
	</tbody>

	</table>
</div>